{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "experimentalDecorators": false,
    "allowJs": true,
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": [
    "main.ts",
    "preload.ts",
    "electron-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "App.tsx"
  ]
}
